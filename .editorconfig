root = true

[*]

indent_style = space
indent_size = 2
tab_width  =  2
# max_line_length = 60

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false


[*.py]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 4

[{Makefile, **/Makefile, runtime/doc/*.txt}]
indent_style  =  tab
indent_size  =  8

[*.php]
indent_style = space
tab_width = 4

[*.html]
indent_style = space
tab_width = 2
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 60
; trim_trailing_whitespace = false

[*.java]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 4
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{c,cpp}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
; trim_trailing_whitespace = false